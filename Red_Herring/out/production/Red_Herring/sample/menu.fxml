<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.web.WebView?>

<?import javafx.scene.control.TextArea?>
<BorderPane fx:id="border_pane" onKeyPressed="#handleKeyInput" styleClass="/resources/css/menu.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Menu_Controller">
    <top>
        <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
            <menus>
                <Menu text="Project">
                    <items>
                        <MenuItem onAction="#handleNewAction" text="New" />
                        <MenuItem onAction="#handleOpenAction" text="Open" />
                        <MenuItem text="Save" />
                        <MenuItem text="Save As" />
                        <SeparatorMenuItem />
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Copy" />
                        <MenuItem text="Cut" />
                        <MenuItem text="Paste" />
                    </items>
                </Menu>
                <Menu text="View">
                    <items>
                        <MenuItem text="Chrome" />
                        <MenuItem text="Firefox" />
                        <MenuItem text="Edge" />
                        <MenuItem text="Internet Explorer" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem disable="true" text="Search" />
                        <MenuItem text="Online Manual" visible="false" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#handleAboutAction" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <TabPane fx:id="tab_pane" side="LEFT">
            <tabs>
                <Tab fx:id="tab" text="Project 0">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                         <VBox fx:id="tab_vbox" prefHeight="200.0" prefWidth="100">
                             <children>
                                 <ToggleButton fx:id="deploy_button" onAction="#handleDeployButtonAction" mnemonicParsing="false" prefHeight="35" prefWidth="Infinity" text="Deploy" />
                                 <Line endX="100.0" startX="-100.0" />
                                 <ToggleButton fx:id="view_button" onAction="#handleViewButtonAction" mnemonicParsing="false" prefHeight="35" prefWidth="Infinity" text="View" />
                                 <Line endX="100.0" startX="-100.0" />
                                 <ToggleButton fx:id="browser_button" onAction="#handleBrowserButtonAction"  mnemonicParsing="false" prefHeight="35" prefWidth="Infinity" text="Browser" />
                                 <Line endX="100.0" startX="-100.0" />
                                 <ToggleButton fx:id="edit_button" onAction="#handleEditButtonAction"  mnemonicParsing="false" prefHeight="35" prefWidth="Infinity" text="Edit" />
                                 <Line endX="100.0" startX="-100.0" />
                             </children>
                         </VBox>
                     </children></AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </left>
    <bottom>
        <TextArea fx:id="text_area"  ></TextArea>
    </bottom>

    <center>
        <WebView fx:id="webView" layoutX="100.0" layoutY="176.0" prefHeight="400" />
    </center>
</BorderPane>
